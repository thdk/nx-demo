#
# Build the docker image with `npx nx docker-build books-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t books-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system books-api && \
          adduser --system -G books-api books-api

COPY dist/apps/books-api books-api/
RUN chown -R books-api:books-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix books-api --omit=dev -f install

CMD [ "node", "books-api" ]
